package com.test.todo.model;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;

public class TodoDAO {
	
	private Connection conn;
	private Statement stat;
	private PreparedStatement pstat;
	private ResultSet rs;

	public TodoDAO() {
		this.conn = MyUtil.open();
		//this.conn = DBUtil.open("192.168.10.47", "mainproject", "java1234");
		//this.conn = DBUtil.open();
	}
	
	//할일 등록하기
	public int add(String todo) {
		
		try {
			
			String sql = "insert into tblTodo values(seqTodo.nextVal, ?, default, default)";
			
			pstat = conn.prepareStatement(sql);
			pstat.setString(1, todo);
			
			return pstat.executeUpdate();
			
		} catch (Exception e) {
			System.out.println("TodoDAO.add");
			e.printStackTrace();
		}
		return 0;
	}
	
	//목록보기
	public ArrayList<TodoDTO> list(){
		
	}

}
